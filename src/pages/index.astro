<style>
	@font-face {
        font-family: "Victor Mono";
        src: url("assets/ttf/VictorMono-BoldItalic.ttf") format("truetype");
    }

	main {
		align-items: center;
		justify-content: center;
	}

	h1 {
		font-size: 4rem;
		font-weight: 900;
	}

	.p-text {
		font-family: "Victor Mono", system-ui, sans-serif;
		font-style: italic;
		font-weight: 900;
	}

	.float-class {
		float: left;
	}

	.gif-image {
		justify-content: center;
	}
</style>